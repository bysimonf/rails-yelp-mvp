<h1>Please add a new review for <%=@restaurant.name %>:</h1>

<%= simple_form_for [@restaurant, @review] do |f| %>
  <%= f.input :content %>
  <%= f.input :rating %>
  <%= f.submit class: "btn btn-success" %>
<% end %>

<%= link_to "Back to overview", restaurants_path, class: "btn btn-secondary" %>
